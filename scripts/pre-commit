#!/bin/bash
# Git pre-commit hook for Yoda.nvim
# Ensures code quality before commits

set -e  # Exit on first error

echo "🔍 Running pre-commit checks..."
echo ""

# Store the exit code
EXIT_CODE=0

# Run linter
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "📝 Running code linter (stylua)..."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
if make lint; then
  echo "✅ Linting passed"
else
  echo "❌ Linting failed!"
  echo ""
  echo "💡 Fix with: make format"
  EXIT_CODE=1
fi

echo ""

# Run tests
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "🧪 Running tests..."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
if make test 2>&1 | tail -5; then
  echo "✅ Tests passed"
else
  echo "❌ Tests failed!"
  echo ""
  echo "💡 Fix failing tests before committing"
  EXIT_CODE=1
fi

echo ""

# Final result
if [ $EXIT_CODE -eq 0 ]; then
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
  echo "✅ All pre-commit checks passed! Proceeding with commit..."
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
else
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
  echo "❌ Pre-commit checks failed! Commit aborted."
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
  echo ""
  echo "To skip these checks (not recommended), use:"
  echo "  git commit --no-verify"
  echo ""
fi

exit $EXIT_CODE

